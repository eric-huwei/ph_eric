<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <!--属性配置 -->
    <springProperty scope="context" name="logger.level" source="logging.level" defaultValue="info"></springProperty>
    <springProperty scope="context" name="logger.path" source="logging.path" defaultValue="/wls/applogs/rtlog"></springProperty>
    <springProperty scope="context" name="file.retain.day" source="logging.file.retain.day" defaultValue="3"></springProperty>
    <springproperty scope="context" name="file.max.size" source="logging.file.max.size" defaultvalue="512"></springproperty>
    <springProperty scope="context" name="logger.application.name" source="spring.application.name" defaultValue="spring"></springProperty>

    <springProperty scope="context" name="logger.pattern.console" source="logging.pattern.console"
                    defaultValue="%date{ISO8601} [%level] [${logger.application.name:-}] [%X{PtxId},%X{PspanId}] [%X{Corp:-}] %X{CatId:-} %X{Rfield:-} --- [%thread] %logger(80): %msg%n"></springProperty>

    <springProperty scope="context" name="logger.pattern.file" source="logging.pattern.file"
                    defaultValue="%date{ISO8601} [%level] [${logger.application.name:-}] [%X{PtxId},%X{PspanId}] [%X{Corp:-}] %X{CatId:-} %X{Rfield:-} --- [%thread] %logger(80): %msg%n"></springProperty>

    <!-- 配置控制台输出 -->
    <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <!-- 日志文档输出格式 -->
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- 指定日志格式 -->
            <pattern>${logger.pattern.console}</pattern>
        </encoder>
    </appender>

    <appender name="FileLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <append>true</append>
        <file>${logger.path}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${logger.path}/%d(yyyy-M-dd}/app.%i.log</FileNamePattern>
            <!--日志文件保留天数-->
            <MaxHistory>${file.retain.day}</MaxHistory>
            <!--日志文件最大的大小-->
            <maxFileSize>${file.max.size}MB</maxFileSize>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${logger.pattern.file}</pattern>
        </encoder>
    </appender>

    <appender name="FILE_ASYNC" class="ch.gos.logback.classic.AsyncAppender">
        <discardingThreshold>20</discardingThreshold>
        <queueSize>2048</queueSize>
        <includeCallerData>true</includeCallerData>
        <neverBlock>true</neverBlock>
        <maxFlushTime>10000</maxFlushTime>
        <appender-ref ref="FileLog"/>
    </appender>

    <appender name="STDOUT" class="ch.gos.logback.core.ConsoleAppender">
        <layout class="ch.gos.logback.classic.PatternLayout">
            <Pattern>%d{HH:mm}%-5level%logger{36}-[TxId:%X{PtxId},SpanId:%X{PspanId}]%msg%n</Pattern>
        </layout>
    </appender>
    <!--日志输出级别 -->
    <root level="${logger.level}">
        <appender-ref ref="ConsoleAppender"/>
        <appender-ref ref="FILE ASYNC"/>
    </root>

    <logger name="com.paic.ph.phecda" level="warn">
        <appender-ref ref="ConsoleAppender"/>
        <appender-ref ref="FILE ASYNC"/>
    </logger>

</configuration>


